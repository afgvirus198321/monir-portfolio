          </div>
        </div>
        <div class="infohr"></div>
      </div>
    </main>
    <%-include('nav')%>

    <script>
      let plus = document.getElementById("plus");
      let minus = document.getElementById("minus");
      let image = document.getElementById("secimage");
      let imgsection = document.getElementById("imgsection");
      if (window.innerWidth < 950) {
        image.src = "images/monire.png";
      }

      plus.addEventListener("click", () => {
        imgsection.style.cssText =
          "clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);";
        plus.style.cssText = "transform:rotate(0deg);";

        setTimeout(() => {
          plus.style.display = "none";

          minus.style.cssText = "display:flex;";
        }, 700);
      });
      minus.addEventListener("click", () => {
        imgsection.style.cssText =
          "clip-path: polygon(0% 100%, 100% 100%, 100% 100%, 0% 100%);";
        plus.style.cssText = "transform:rotate(360deg);";
        plus.style.display = "flex";
        minus.style.display = "none";
      });
      let flag = true;
      image.addEventListener("click", () => {
        imgsection.style.cssText =
          "clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);";
        plus.style.cssText = "transform:rotate(0deg);";

        setTimeout(() => {
          plus.style.display = "none";

          minus.style.cssText = "display:flex;";
        }, 700);
      });
      imgsection.addEventListener("click", () => {
        imgsection.style.cssText =
          "clip-path: polygon(0% 100%, 100% 100%, 100% 100%, 0% 100%);";

        plus.style.cssText = "transform:rotate(360deg);";

        minus.style.display = "none";
        plus.style.display = "flex";
      });
      window.addEventListener("DOMContentLoaded", () => {
        document.getElementById("header").style.transform = "scaleX(100%)";
        document.getElementById("section2").style.transform = "scaleY(100%)";
      });
    </script>
  </body>
