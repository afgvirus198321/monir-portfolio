      rel="stylesheet"
    />
    <style>
      #connect {
        background-color: rgb(247, 247, 125);
      }
      .connect {
        background-color: rgb(247, 247, 125);
      }
      .work,
      .services,
      .about,
      .navlogo {
        background-color: white;
      }
    </style>
  </head>
  <body>
    <%-include('navup')%>
    <main class="mainconnect" id="aboutmainconnect">
      <div class="leftside" id="leftside">
        <form action="/submitform" method="post" class="form">
          <h2>Name</h2>
          <input type="text" name="name" />
          <h2>E-mail</h2>
          <input type="text" name="email" />
          <h2>Message</h2>
          <textarea name="message" id="message" cols="30" rows="10"></textarea>
          <button type="submit">Submit</button>
        </form>
      </div>
      <div class="rightside" id="rightside">
        <div class="insideright">
          <div class="facebook">
            <img src="images/facebook.png" id="facebook" class="icons" alt="" />
            <h5>Facebook</h5>
          </div>
          <div class="gmail">
            <img src="images/gmail.png" id="gmail" class="icons" alt="" />
            <h5>Gmail</h5>
          </div>
          <div class="instagram">
            <img
              src="images/instagram.png"
              id="instagram"
              class="icons"
              alt=""
            />
            <h5>Instagram</h5>
          </div>
        </div>
      </div>
    </main>
    <%-include('nav')%>

    <script>
      document.getElementById("facebook").addEventListener("click", () => {
        window.location.href = "https://www.facebook.com/mmonir.shekoyans";
      });
      document.getElementById("instagram").addEventListener("click", () => {
        window.location.href = "https://www.instagram.com/turtle_animation123/";
      });
      document.getElementById("gmail").addEventListener("click", () => {
        window.location.href = "mailto:monir.shekoyans1@gmail.com";
      });

      window.addEventListener("DOMContentLoaded", () => {
        setTimeout(() => {
          document.getElementById("leftside").style.cssText =
            "clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);";
        }, 1000);
      });
    </script>
  </body>
</html>
